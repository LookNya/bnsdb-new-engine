line_col = grey
corners_size = 10px

.in-cell-relative-fix
	position: relative
	width: 100%
	height 100%
.evol-tree-wrap
	width: 900px
	margin: auto
	table
		table-layout: fixed
		width: 100%
	tr.separator td
		height: 40px
		.line
			width: 25%
			left: 24%
			height: 1px
			background: line_col
			top: 50%
			margin-top: -1px
			position: relative
			&:before,
			&:after
				content: ''
				position: absolute
				border: 1px solid line_col
				width: corners_size
				height: corners_size
			&:before
				border-top-left-radius: 5px
				border-bottom: 0
				border-right: 0
				left: - corners_size
			&:after
				border-bottom-right-radius: 5px
				border-top: 0
				border-left: 0
				right: - corners_size
				top: - corners_size
	.ingrs
		text-align center
		.horiz-line
			position: absolute
			background: line_col
			height: 1px
			width: 100%
			top: 50%
			margin-top: -1px
		.items-wrap
			display inline-block
			text-align: left
			position: relative
			.shadow
				opacity: 0.9
				//overflow-x auto
				//overflow-y hidden
				position absolute
				height: 100%
				width: 100%
				&:before
					position absolute
					content: ""
					height: 100%
					width: 100%
					background white
					box-shadow: 0px 0px 25px 10px white
			.descr
				display: none
				position: absolute
				z-index: 4
			.item
				float left
				position: relative
				padding: 5px;
				&:hover
					.descr
						display block
				.icon
					width: 40px
					height: 40px
					border: 1px solid blue
					border-radius: 50%
					background-size: cover
					background-color: white
