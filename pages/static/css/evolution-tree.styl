line_col = rgb(207, 207, 207)
corners_size = 10px

.in-cell-relative-fix
	position: relative
	width: 100%
	height 100%
.evol-tree-wrap
	width: 900px
	margin: auto
	padding-bottom: 20px
	table
		table-layout: fixed
		width: 100%
		td:nth-child(2)
					vertical-align: middle
	tr.separator td
		height: 80px
		.line
			width: 32%;
			left: 17%;
			height: 2px
			background: line_col
			top: 50%
			margin-top: -1px
			position: relative
			z-index: 0;
			&:before,
			&:after
				content: ''
				position: absolute
				border: 2px solid line_col
				width: corners_size
				height: corners_size
			&:before
				border-top-left-radius: 5px
				border-bottom: 0
				border-right: 0
				height: 50px;
				left: - corners_size
			&:after
				border-bottom-right-radius: 5px
				border-top: 0
				border-left: 0
				right: - corners_size
				top: -100px;
				height: 100px;
	.ingrs
		text-align center
		.horiz-line
			position: absolute
			background: line_col
			height: 2px
			width: 100%
			top: 50%
			margin-top: -1px
			&:after
				content: ''
				position: absolute;
				width: 2px
				background: line_col
				top 0px
				left: 50%
				margin-left: -1px
				height: 50px
		.items-wrap
			display inline-block
			text-align: left
			position: relative
			z-index: 2
			.shadow
				opacity: 0.75
				//overflow-x auto
				//overflow-y hidden
				position absolute
				height: 100%
				width: 100%
				&:before
					position absolute
					content: ""
					height: 100%
					width: 100%
					background white
					box-shadow: 0px 0px 25px 10px white
			.descr
				display: none
				position: absolute
				z-index: 4
			.item
				float left
				position: relative
				padding: 5px;
				&:hover
					.descr
						display block
				.descr
					background: white
					border-radius: 3px
					padding: 10px
					width: 200px
					box-shadow: 0px 10px 40px 0px rgba(180, 182, 187, 1)
					animation: wPopupShow .1s;
					left: -80;
					text-align: center;
					.name
						font-weight: 600
					.obtaining
						font-size: 14px
						padding-top: 8px;
						line-height: normal;
				.icon
					width: 40px
					height: 40px
					border: 1px solid line_col
					border-radius: 50%
					background-size: cover
					background-color: white
					background-repeat: no-repeat;
					background-origin: content-box;
					padding: 3px;
					box-sizing: border-box;
				.count
					position: absolute;
					font-size: 12px;
					font-weight: bold;
					text-shadow: white 1px 0px, white 1px 1px, white 0px 1px, white -1px 1px, white -1px 0px, white -1px -1px, white 0px -1px, white 1px -1px;
					top: 32px;
					right: 5px;
					&:before
						content: 'x'
@keyframes wPopupShow {
		from {
		opacity: 0;
		transform: translateY(10px)
	}
		to {
		opacity: 1;
		transform: translateY(0px)
	}
}
