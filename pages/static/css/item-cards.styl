.item-card
	padding: 14px
	border-radius: 5px
	border: 1px solid rgb(207, 207, 207)
	width: 300px
	box-shadow: 0px 0px 5px 0px rgba(216, 216, 216, 1);
	background: white;
	z-index: 1;
	position: relative;
	&, > *
		box-sizing: border-box
	.name
		height: 55px
		padding-left: 11px
		padding-right: 11px
		max-width: 175px
		font-size: 16px
		font-weight: 600
		margin-bottom: 11px
		&.purple
			color: #A800DC
		&.blue
			color: #006BDC
	.name,
	.icon
			float: left
	.icon
		float: left
		width: 55px
		height: 55px
		border-radius: 5px
		background-size: cover
		opacity: 0.9
		margin-bottom: 11px
	.descr
		float: left
		font-size: 14px
