.container
	top: 0
	left: 0
	right: 0
	bottom: 0
	position absolute
	> .f
		top: 0
		left: 0
		right: 0
		bottom: 0
		position absolute
		> .t
			display: table
			table-layout: fixed
			width: 100%
			height: 100%
			> .r
				display: table-cell;
				vertical-align: middle;
				text-align: center;
				> .body
					display: inline-block;
					text-align: left;
					max-width: 1145px
	.background
		position: absolute;
		top: -10px
		right: -10px
		left: -10px
		bottom: -10px
		background-image: url('/img/mpi/4.jpg')
		background-size: cover;
		-moz-filter: blur(5px);
		-webkit-filter: blur(5px);
		filter: blur(5px);


@media (min-width: 0px) and (max-width: 760px)
	.body
		display: none
