.content
	background: white
.brick-select
	width: 100%
	position: relative;
	.back
		position: absolute;
		top: 100%
		height: 0
		width: 100%
		background: #f2f8ff;
	table
		table-layout: fixed;
		width: 100%
		cursor: pointer;
		.option
			background: #e4f1ff;
			position: relative;
			color: #0e3969;
			&.active
				background: #5ca3f1;
				color: white;
				font-weight: bold;
			label
				cursor: pointer;
				width: 100%;
				display: block;
				padding: 5px 14px 7px;
			&:hover
				.variants
					display: block
			.variants
				display: none
				position: absolute;
				top: 100%
				width: 100%
				font-weight: normal;
				padding-left: 14px;
				padding-top: 6px;
				color: #0e3969;
				z-index: 2;
				.variant
					padding: 2 0px;
					&.active
						font-weight: bold;
